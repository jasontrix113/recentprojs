{% extends 'templates/indexApp.twig' %}

{% block wrap %}
<body style="padding:0;">
    <title>Signup</title>   
    <div class="login-content">
        <div id="signup-form" style="margin:0; padding: 0;">
            <div class="col-sm-6" id="react-signup-bg">
                <div class="react-login">
                    <img src="../../../../reactmechanics/media/img/reactmechanicslogo.png">
                </div>    
            </div>
            <div class="col-sm-6" style="padding: 0 70px; margin-top: 25px;">
                <div class="form-header">
                    <h1>Get started with a free account</h1>
                    <p>Create a free account to send beautiful emails to customers, contributors, and fans. Already have an account? <a href="{{ path_for('auth.signin')}}"> Log in here </a> </p>
                </div>
                <br>
                <form action="" method="post" id="s-form">                 
                    <div class="form-group {{ errors.firstname ? ' has-error':' '}} col-sm-6" style="margin: 0; padding-left: 0;" >
                        <label for="firstname">First name</label>
                        <input type="text" class="form-control" id="f_name" name="firstname" value="{{ old.firstname }}">
                        {% if errors.firstname %}
                        <span class="help-block">{{ errors.firstname | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.lastname ? ' has-error':' '}} col-sm-6" style="margin: 0; padding-right: 0;">
                        <label for="lastname">Last name</label>
                        <input type="text" class="form-control" id="l_name" name="lastname" value="{{ old.lastname }}">
                        {% if errors.lastname %}
                        <span class="help-block">{{ errors.lastname | first }}</span>
                        {% endif %}
                    </div>
                     <div class="form-group {{ errors.email ? ' has-error':' '}}">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="s_email" name="email" value="{{ old.email }}">
                        {% if errors.email %}
                        <span class="help-block">{{ errors.email | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.password ? ' has-error':' '}}">
                        <label for="password"> Password<a href="" class="show" id="s_show" onclick="return show()"><span id="show_eye" class="fa fa-eye" ></span> Show </a></label>
                        <input type="password" class="form-control" id="s_password" name="password" value="{{ old.password }}">
                        {% if errors.password %}
                        <span class="help-block">{{ errors.password | first }}</span>
                        {% endif %}
                    </div><br>
                    <input type="submit" class="btn btn-default btn-block" id="signup-btn" value="Sign up"><br>
                   <!-- {{ csrf.field | raw }} -->
                    <div class="lcheckbox-group" style=" margin-left: 10px; width: 100%;"> 
                        <label class="checkbox" for="terms"> 
                            <div class="terms-checkbox" role="presentation" tabindex="4" style="float: left;">
                                <input type='checkbox' name='keepmelogin' value='valuable' id="terms">
                                <label for="terms"></label>
                            </div>
                            <div style="font-size: 12px; font-weight: normal;"> 
                               &nbsp; By clicking this box, you agree to the reactmechanics <a href="">Terms </a> and <a href=""> Conditions</a>
                            </div>
                        </label>
                    </div>
                    <footer class="login-footer">
                        <!--<p>&copy;2001-2017 All rights Reserved. XXXXXXXXÂ® is a registered trademark of the Rocket Science Group. </p>-->
                        <!--<p><a href="#" style="font-size: 11px;"> Privacy</a> and <a href="#" style="font-size: 11px;"> Terms </a> </p>-->
                    </footer>
                </form>      
            </div>
        </div>
     </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="../plugins/bootstrap-show-password-master/bootstrap-show-password.min.js"></script>
    <script type="text/javascript">
        function show()
            {
            if( $("#s_password").attr("type") == "password" ){
                $("#s_password").attr("type", "text");
                $("#show_eye").attr("class", "fa fa-eye-slash");
            }else{
                $("#s_password").attr("type", "password");
                $("#show_eye").attr("class", "fa fa-eye");
            }      
                return false;
            }
    </script>
</body>
    
{% endblock %}